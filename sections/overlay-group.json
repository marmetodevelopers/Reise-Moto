{
  "type": "aside",
  "name": "Overlay group",
  "sections": {
    "cart-drawer": {
      "type": "cart-drawer",
      "settings": {
        "show_backorder_text": true,
        "show_vendor": true,
        "show_order_note": true,
        "show_shipping_text_notice": true,
        "show_additional_checkout_buttons": true,
        "show_checkout_button": true,
        "stick_footer": true,
        "show_shipping_calculator": false,
        "shipping_calculator_default_country": "United States"
      }
    },
    "product-compare": {
      "type": "product-compare",
      "blocks": {
        "compare-1": {
          "type": "image",
          "settings": {
            "show_line": true
          }
        },
        "compare-2": {
          "type": "vendor",
          "settings": {
            "show_line": false
          }
        },
        "compare-3": {
          "type": "title",
          "settings": {
            "show_line": false
          }
        },
        "compare-4": {
          "type": "price",
          "settings": {
            "show_line": false
          }
        },
        "compare-5": {
          "type": "description",
          "settings": {
            "truncate_description": false,
            "words_to_show": 20,
            "show_line": false
          }
        },
        "compare-6": {
          "type": "variants",
          "settings": {
            "show_line": false
          }
        }
      },
      "block_order": [
        "compare-1",
        "compare-2",
        "compare-3",
        "compare-4",
        "compare-5",
        "compare-6"
      ],
      "settings": {
      }
    }
  },
  "order": [
    "cart-drawer",
    "product-compare"
  ]
}
