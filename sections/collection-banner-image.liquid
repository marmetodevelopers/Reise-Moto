<div class="collection_banner_image">
  {% assign image = collection.metafields.custom.collection_banner_image.value %}
  <img src={{ image | image_url }} />
</div>


{% style %}
  .collection_banner_image img{
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
{% endstyle %}

{% schema %}
  {
    "name": "collections image banner",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets":[{
      "name": "collections image banner"
    }]
  }
{% endschema %}



