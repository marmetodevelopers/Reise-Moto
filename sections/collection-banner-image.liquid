

<div class="page-width section-{{ section.id }}-padding collection_banner_meta_image">
  <div class="collection_banner_image">
  {% assign image = collection.metafields.custom.collection_banner_image.value %}
  <img src={{ image | image_url }} />
</div>

</div>


{% style %}
  .collection_banner_image img{
    width: 100%;
    object-fit: cover;
  }

    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

{% schema %}
  {
    "name": "collections image banner",
    "settings": [
      {
        "type": "header",
        "content": "Padding Heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding top",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom",
        "default": 0
      }
    ],
    "presets":[{
      "name": "collections image banner"
    }]
  }
{% endschema %}



